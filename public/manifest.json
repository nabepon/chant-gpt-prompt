{
  "manifest_version": 3,

  "name": "Chant-GPT_Prompt",
  "description": "ChatGPT Prompt Extension",
  "version": "0.1.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon-128.png",
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png"
  },

  "content_scripts": [
      {
        "matches": [ "https://*/*", "http://*/*" ],
        "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "permissions": [
    "storage"
  ]
}
